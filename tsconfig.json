{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "dev/**/*",
    "*"
  ]
}
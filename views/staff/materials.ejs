<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navbar.ejs') %>

    <main id="body">
        <div class="container">
            <div class="tab-header">
                <h3><%= course.code  %> Materials</h3>
                <div>
                    <button id="<%= course._id %>" onclick="getAddMaterialModal(this)" class="btn">
                        Add Material
                    </button>
                </div>                
            </div>
            <% if (materials.length > 0) { %>
                <div class="grid">
                      <% for (let material of materials) { %>
                          <article class="card product-item">
                              <header class="card__header">
                                  <h1 class="product__title">
                                     Name: <%= course.name %>
                                  </h1>
                              </header>
                              <div class="card__content">
                                  <h2 class="product__price">
                                    Name:  <%= material.url %>
                                  </h2>
                              </div>
                              <div class="card__actions">
                                  <a class="btn" href="/uploads/<%= material.url  %>"  >View Material </a>
                              </div>
                          </article>
                          <% } %>
                  </div>
                  <% } else { %>
                      <h1>No Material Found!</h1>
                  <% } %>
    
               
        </div>

        <div class="modal" id="material">
            <div class="modal-content">
              <div class="modal-header">
                <h3>Add Material</h3>
                <span class="close">&times;</span>
              </div>
              <div class="form-control">
                <label for="material">Upload File<sup>*</sup></label>
                <input 
                    type="file" 
                    name="material-value" 
                    id="material-value"
                    accept=".doc,.pdf,.png"
                />
              </div>
              <p>Max Material Size is 100kb</p>
              <button id="add-material" onclick="addMaterial()" class="btn">Add Material</button>
            </div>
            
          </div>
        
    </main>

    <script src="/js/helpers.js"></script>
    <script src="/js/staff.js"></script>
<%- include('../includes/end.ejs') %>
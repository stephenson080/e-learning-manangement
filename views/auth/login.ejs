<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navbar.ejs') %>

    <main id="body">
        <% if (errorMessage) { %>
            <div class="user-message <%= error ? 'user-message--error' : ''%>"><%= errorMessage %></div>
        <% } %>    
        <div class="login-form" >
            <h3>Account Login</h3>
            <div class="form-control">
                <label for="regNo">Reg No<sup>*</sup></label>
                <input 
                    type="text" 
                    name="regNo" 
                    id="regNo" 
                    class="<%= error ? 'invalid' : ''%>"
                />
            </div>
            <div class="form-control">
                <label for="password">Password<sup>*</sup></label>
                <input 
                type="password" 
                name="password" 
                id="password" 
                class="<%= error ? 'invalid' : ''%>"
            />
            </div>
            <button onclick="login()" class="btn">Login</button>
        </div>
        <div class="centered">
            <p class="link" href="/auth/signup">Sign up</p>
        </div>
    </main>

    <script src="/js/auth.js"></script>
    <script src="/js/helpers.js"></script>
<%- include('../includes/end.ejs') %>